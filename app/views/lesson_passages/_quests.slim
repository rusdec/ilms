= page_header('Quests')

- lesson_passage.quest_passages_by_quest_group.each do |quest_group|
  = page_header_3(quest_group.length > 1 ? 'Required one' : 'Required')
  . class='row row-cards row-deck'
    - quest_group.each_with_index do |quest_passage, index|
      . class='col-md-3'
        .card
          . class="card-status #{quest_passage_color_status(quest_passage)}"
          .card-header
            h3.card-title= quest_passage.quest.title
          .card-body
            = quest_passage.quest.description.truncate(150)
            . class='quest_solution_status text-center'
          . class='card-footer text-muted small'
            . class='d-flex align-items-center mt-auto'
              ="Difficulty: #{quest_passage.quest.difficulty}"
              .ml-auto
                = link_to 'Go!', "#{course_passage_quest_passage_path(@course_passage, quest_passage)}", class: 'm-1 text-purple'

      - if (index+1)%3 == 0
        .w-100
